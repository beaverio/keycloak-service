{
  "realm": "non-production",
  "enabled": true,

  "accessTokenLifespan": 900,
  "clientSessionIdleTimeout": 604800,
  "clientSessionMaxLifespan": 2592000,
  "ssoSessionIdleTimeout": 604800,
  "ssoSessionMaxLifespan": 2592000,
  "revokeRefreshToken": true,
  "refreshTokenMaxReuse": 0,

  "clients": [
    {
      "clientId": "auth-gateway",
      "secret": "${AUTH_GATEWAY_CLIENT_SECRET}",
      "protocol": "openid-connect",
      "publicClient": false,
      "serviceAccountsEnabled": false,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": false,
      "implicitFlowEnabled": false,
      "fullScopeAllowed": true,
      "redirectUris": [
        "http://localhost:8000/login/oauth2/code/auth-gateway"
      ],
      "webOrigins": [
        "http://localhost:8000"
      ],
      "protocolMappers": [
        {
          "name": "userId",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "userId",
            "claim.name": "userId",
            "jsonType.label": "String",
            "multivalued": "false",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        }
      ]
    },
    {
      "clientId": "identity-service",
      "secret": "${IDENTITY_SERVICE_CLIENT_SECRET}",
      "protocol": "openid-connect",
      "publicClient": false,
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "implicitFlowEnabled": false,
      "bearerOnly": false,
      "fullScopeAllowed": true,
      "protocolMappers": [
        {
          "name": "client roles (realm-management)",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-client-role-mapper",
          "consentRequired": false,
          "config": {
            "usermodel.clientRoleMapping.clientId": "realm-management",
            "claim.name": "resource_access.realm-management.roles",
            "jsonType.label": "String",
            "multivalued": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "false"
          }
        }
      ]
    }
  ],

  "users": [
    {
      "username": "service-account-identity-service",
      "serviceAccountClientId": "identity-service",
      "enabled": true,
      "clientRoles": {
        "realm-management": [
          "view-users",
          "manage-users"
        ]
      }
    },

    {
      "username": "John",
      "enabled": true,
      "email": "john@np.com",
      "emailVerified": true,
      "firstName": "John",
      "lastName": "Doe",
      "credentials": [
        { "type": "password", "value": "password", "temporary": false }
      ]
    },
    {
      "username": "Mary",
      "enabled": true,
      "email": "mary@np.com",
      "emailVerified": true,
      "firstName": "Mary",
      "lastName": "Smith",
      "credentials": [
        { "type": "password", "value": "password", "temporary": false }
      ]
    }
  ]
}
